<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top" style="background-color:#2B445E">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ITBLOG", "Index","Home", new { area =""}, new { @class = "navbar-brand",@id="text-index" })
            </div>
            <div class=" navbar-collapse collapse">

                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        <div class="row" style="padding-top:5%">
            <div class="col-md-8" >
                @RenderBody()
                <hr />
                </div>
            <div class="col-md-4">           
                @{Html.RenderAction("GetRandomTag", "Tags");}
               </div>
            </div>
        <footer id="footer-last">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
       </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
